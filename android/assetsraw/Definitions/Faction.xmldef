<Definitions Colour="250,136,136" Icon="Sprites/Oryx/uf_split/uf_heroes/rat_giant_1.png" xmlns:meta="Editor">
	<Definition Name="Faction" meta:RefKey="Struct">
		<Data Name="Monsters" MinCount="1" meta:RefKey="Collection">
			<Data Name="Monster" Keys="MonsterDesc" Nullable="False" meta:RefKey="Reference" />
		</Data>
		<Data Name="Bosses" MinCount="1" meta:RefKey="Collection">
			<Data Name="Monster" Keys="MonsterDesc" Nullable="False" meta:RefKey="Reference" />
		</Data>
	</Definition>
	<Definition Name="MonsterDesc" IsGlobal="True" meta:RefKey="StructDef">
		<Data Name="Name" meta:RefKey="String" />
		<Data Name="Sprite" Keys="Sprite" meta:RefKey="Reference" />
		<Data Name="Death" Keys="ParticleEffect" meta:RefKey="Reference" />
		<Data Name="AttackNumPips" Type="Int" Min="0" Default="5" SkipIfDefault="False" meta:RefKey="Number" />
		<Data Name="AttackCooldown" Name1="Min" Name2="Max" Min="1" Default="6" Type="Int" SkipIfDefault="False" meta:RefKey="Vector" />
		<Data Name="AttackDamage" Type="Int" Min="1" Default="1" meta:RefKey="Number" />
		<Data Name="Size" Type="Int" Min="1" Default="1" SkipIfDefault="False" meta:RefKey="Number" />
		<Data Name="HP" Type="Int" Min="1" Default="10" SkipIfDefault="False" meta:RefKey="Number" />
		<Data Name="DamageReduction" Type="Int" Min="0" SkipIfDefault="False" meta:RefKey="Number" />
		<Data Name="Abilities" meta:RefKey="Collection">
			<Data Name="Ability" meta:RefKey="Struct">
				<Data Name="Cooldown" Name1="Min" Name2="Max" Min="1" Type="Int" SkipIfDefault="False" meta:RefKey="Vector" />
				<Data Name="Target" EnumValues="Neighbour,Random" meta:RefKey="Enum" />
				<Data Name="Count" Type="Int" Min="1" Default="1" meta:RefKey="Number" />
				<Data Name="TargetRestriction" EnumValues="Orb,Special,Block,Empty,Sealed,Monster,Attack,Tile,NamedTile,Spreader" meta:RefKey="Enum" />
				<Data Name="Permuter" EnumValues="Single,AllOfType,NofType,Column,Row,Cross,Block,Diamond,Random" meta:RefKey="Enum" />
				<Data Name="Effect" EnumValues="Attack,Seal,CustomOrb,Block,Move,Heal,SealedAttack,Summon,DelayedSummon,Spreader" meta:RefKey="Enum" />
				<Data Name="Data" meta:RefKey="Struct">
					<!--Attack-->
					<Data Name="NumPips" Type="Int" Min="1" Default="7" VisibleIf="Parent.Effect==Attack || Parent.Effect==SealedAttack || Parent.Effect == Heal || Parent.Effect == DelayedSummon" meta:RefKey="Number" />
					<Data Name="Damage" Type="Int" Min="1" Default="1" VisibleIf="Parent.Effect == Attack || Parent.Effect == SealedAttack" meta:RefKey="Number" />
					<Data Name="Strength" Type="Int" Min="1" Default="1" VisibleIf="Parent.Effect==Seal || Parent.Effect==Shield || Parent.Effect == SealedAttack || Parent.Effect == Block" meta:RefKey="Number" />
					<Data Name="Amount" Type="Int" Min="1" Default="10" VisibleIf="Parent.Effect==Heal" meta:RefKey="Number" />
					<!--Permuter-->
					<Data Name="AOE" Type="Int" Min="1" Default="1" VisibleIf="Parent.Permuter==Block || Parent.Permuter==Diamond" meta:RefKey="Number" />
					<Data Name="Count" Type="Int" Min="1" Default="1" VisibleIf="Parent.Permuter==Random || Parent.Permuter==NOfType" meta:RefKey="Number" />
					<Data Name="Type" VisibleIf="Parent.Permuter==NofType || Parent.Permuter==AllOfType" meta:RefKey="String" />
					<Data Name="Range" Type="Int" Min="1" Default="1" VisibleIf="Parent.Target==Neighbour" meta:RefKey="Number" />
					<Data Name="TileName" VisibleIf="Parent.TargetRestriction==NamedTile" meta:RefKey="String" />
					<!--Spreader-->
					<Data Name="SpreaderName" VisibleIf="Parent.TargetRestriction == Spreader" meta:RefKey="String" />
					<Data Name="Spreader" Keys="SpreaderDef" VisibleIf="Parent.Effect == Spreader" meta:RefKey="Reference" />
					<!--Summon-->
					<Data Name="Faction" BasePath="Factions" StripExtension="True" ResourceType="Faction" VisibleIf="Parent.Effect==Summon || Parent.Effect == DelayedSummon" meta:RefKey="File" />
					<Data Name="Name" VisibleIf="Parent.Effect==Summon || Parent.Effect == DelayedSummon || Parent.Effect==CustomOrb" meta:RefKey="String" />
					<Data Name="IsSummon" SkipIfDefault="False" VisibleIf="Parent.Effect == Summon || Parent.Effect == DelayedSummon" meta:RefKey="Boolean" />
					<Data Name="SpawnEffect" Keys="ParticleEffect" VisibleIf="Parent.Effect == Summon || Parent.Effect == DelayedSummon" meta:RefKey="Reference" />
				</Data>
			</Data>
		</Data>
	</Definition>
</Definitions>